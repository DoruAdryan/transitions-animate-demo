<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.andreidiaconu.transitions">

    <!--You will try to use the project with internet images and I'm sparing you the problems-->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/AppTheme">

        <activity
            android:name=".stage1.GridActivity1"
            android:label="Cats Stage 1"
            >
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity  android:name=".stage1.DetailsActivity1" />

        <activity
            android:name=".stage2.GridActivity2"
            android:label="Cats Stage 2"
            >
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity  android:name=".stage2.DetailsActivity2" />

    </application>

</manifest>
